{
  "name": "cartel-game-api",
  "private": true,
  "version": "1.0.0",
  "description": "Telegram Cartel Game API",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "npx @biomejs/biome format --write ./",
    "lint": "npx @biomejs/biome lint --write ./",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "migrate:create": "ts-node node_modules/.bin/migrate-mongo create -f ./migrate-mongo/migrations.ts",
    "migrate:status": "ts-node node_modules/.bin/migrate-mongo status -f ./migrate-mongo/migrations.ts",
    "migrate:up": "ts-node node_modules/.bin/migrate-mongo up -f ./migrate-mongo/migrations.ts",
    "migrate:down": "ts-node node_modules/.bin/migrate-mongo down -f ./migrate-mongo/migrations.ts && npm run migrate:status",
    "migrate:seed:create": "ts-node node_modules/.bin/migrate-mongo create -f ./migrate-mongo/seeders.ts",
    "migrate:seed:status": "ts-node node_modules/.bin/migrate-mongo status -f ./migrate-mongo/seeders.ts",
    "migrate:seed:up": "ts-node node_modules/.bin/migrate-mongo up -f ./migrate-mongo/seeders.ts",
    "migrate:seed:down": "ts-node node_modules/.bin/migrate-mongo down -f ./migrate-mongo/seeders.ts && npm run migrate:seed:status",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@goopen/nestjs-ioredis-provider": "^1.1.1",
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/terminus": "^10.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "lodash": "^4.17.21",
    "mixpanel": "^0.18.0",
    "mongoose": "^8.5.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.1",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "migrate-mongo": "^11.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "globalSetup": "../test/setup/jest.setup.ts",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
